{
    "name": "@juanjofp/at-command",
    "version": "0.0.1",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "at-command-cli": "dist/cli.js"
    },
    "scripts": {
        "build": "webpack",
        "start": "node dist/index.js",
        "cli": "node dist/cli.js",
        "cli:dev": "npm run build && node dist/cli.js",
        "start:dev": "npm run build && node dist/index.js --inspect=0.0.0.0:9229",
        "start:watch": "concurrently --kill-others \"npm run start:watch:compile\" \"npm run start:watch:run\"",
        "start:watch:compile": "webpack --watch",
        "start:watch:run": "nodemon",
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
        "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
        "test": "jest --watchAll",
        "test:coverage": "jest --watchAll --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:ci": "jest --collect-coverage --runInBand",
        "test:rpi": "jest --runInBand --watch",
        "publish-code-coverage": "codecov",
        "validate": "npm run format && npm run formatTest && npm run lint && npm run test:ci && npm run build",
        "prepare": "husky install",
        "pretty-quick": "pretty-quick --staged",
        "prepublish": "npm run build"
    },
    "author": "juanjofp, francescorivola",
    "repository": "",
    "license": "MIT",
    "devDependencies": {
        "@types/convict": "^6.1.1",
        "@types/jest": "^27.5.0",
        "@types/node": "^17.0.31",
        "@types/serialport": "^8.0.2",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "@typescript-eslint/parser": "^5.22.0",
        "codecov": "^3.8.3",
        "concurrently": "^7.1.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^7.0.4",
        "jest": "^28.0.3",
        "jest-watch-typeahead": "^1.1.0",
        "nodemon": "^2.0.16",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^28.0.1",
        "ts-loader": "^9.3.0",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
        "typescript": "^4.6.4",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2",
        "webpack-node-externals": "^3.0.0",
        "webpack-shebang-plugin": "^1.1.7"
    },
    "dependencies": {
        "@serialport/parser-readline": "^10.3.0",
        "serialport": "^10.4.0"
    }
}
