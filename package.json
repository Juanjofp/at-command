{
    "name": "at-command-serialport",
    "version": "0.0.1",
    "description": "",
    "main": "build/main.js",
    "scripts": {
        "build": "tsc -p tsconfig-build.json",
        "start": "babel-node dist/main.js",
        "start:dev": "npm run build && babel-node dist/main.js --inspect=0.0.0.0:9229",
        "start:watch": "nodemon",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
        "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
        "test": "jest --watchAll",
        "test:coverage": "jest --watchAll --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:ci": "jest --collect-coverage",
        "publish-code-coverage": "codecov",
        "validate": "npm run format && npm run formatTest && npm run lint && npm run test:ci && npm run build",
        "prepare": "husky install",
        "pretty-quick": "pretty-quick --staged"
    },
    "author": "juanjofp, francescorivola",
    "repository": "",
    "license": "MIT",
    "devDependencies": {
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.11",
        "@types/convict": "^6.1.1",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.24",
        "@types/pino": "^7.0.4",
        "@types/serialport": "^8.0.2",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "codecov": "^3.8.3",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-watch-typeahead": "^1.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "@serialport/parser-readline": "^10.3.0",
        "serialport": "^10.4.0"
    }
}
