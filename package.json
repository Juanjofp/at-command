{
  "name": "@juanjofp/at-command",
  "version": "1.0.26",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "at-command-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "webpack",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "cli:dev": "npm run build && node dist/cli.js",
    "start:dev": "npm run build && node dist/index.js --inspect=0.0.0.0:9229",
    "start:watch": "concurrently --kill-others \"npm run start:watch:compile\" \"npm run start:watch:run\"",
    "start:watch:compile": "webpack --watch",
    "start:watch:run": "nodemon",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
    "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
    "test": "jest --watchAll",
    "test:clear": "jest --clearCache",
    "test:coverage": "jest --watchAll --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "test:ci": "jest --collect-coverage --runInBand",
    "test:rpi": "jest --runInBand --watch",
    "publish-code-coverage": "codecov",
    "validate": "npm run format && npm run formatTest && npm run lint && npm run test:ci && npm run build",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick --staged",
    "prepublish": "npm run build"
  },
  "author": "juanjofp, francescorivola",
  "repository": "https://github.com/Juanjofp/at-command",
  "license": "MIT",
  "devDependencies": {
    "@types/convict": "^6.1.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/serialport": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^5.60.0",
    "codecov": "^3.8.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-filenames": "^1.3.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "webpack-shebang-plugin": "^1.1.8"
  },
  "dependencies": {
    "@serialport/parser-readline": "^11.0.0",
    "serialport": "^11.0.0"
  }
}